<div class= "container">
  <div class="my-4">
   <h1 style="text-align:center"> Rent any kind of boats </h1>
  </div>

  <div class="cards">
    <% @boats.each do |boat| %>
        <%= link_to boat_path(boat) %>
        <div>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('<%= cl_image_path boat.photos.first.key, crop: :fill %>')">
              <%= boat.name %>
          </div>
          <div class= "d-flex justify-content-around">
            <p> <%= boat.description %> </p>
            <p> <%= boat.price %> Dhs/Day </p>
          </div>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
