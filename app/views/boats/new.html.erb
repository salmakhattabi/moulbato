<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3> Book formule </h3>
        <%= simple_form_for (@boat) do |f| %>
          <%= f.input :name   %>
          <%= f.input :description %>
          <%= f.number_field :price %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
