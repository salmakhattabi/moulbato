<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Rent your boat  <%= @boat.name %> </h3>
        <%= simple_form_for @boat do |f| %>
          <%= f.input :name   %>
          <%= f.input :description %>
          <%= f.number_field :price %>
          <%= f.submit  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
